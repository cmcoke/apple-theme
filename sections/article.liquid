<section class="single-article">
  <div class="article-card">

    {% comment %} Check if the article has an image. If it does, display it using the 'medium' size. {% endcomment %}
    {% if article.image %}
      <img
        class="article-image"
        src="{{ article.image | img_url: 'medium' }}"
        alt="{{ article.title }}">
    {% endif %}

    <a href="{{ article.url }}" class="article-title">{{ article.title }}</a>

    <div class="article-content">
      <p class="article-text">{{ article.content | strip_html }}</p>
    </div>

    <div class="article-meta">
      <p class="article-author">By
        <strong>{{ article.author }}</strong>
      </p>
      <p class="article-tags">Tags:
        {% comment %} Loop through each tag in the article and create a link to the corresponding tag page. {% endcomment %}
        {% for tag in article.tags %}
          <a href="/blogs/{{ article.blog.handle }}/tags/{{ tag | handleize }}" class="article-tag">{{ tag }}</a>
          {% comment %} Add a comma between tags, unless itâ€™s the last tag in the loop. {% endcomment %}
          {% unless forloop.last %},{% endunless %}
        {% endfor %}
      </p>
      <p class="article-date">Published on {{ article.published_at | date: "%B %d, %Y" }}</p>
    </div>
  </div>
</section>


<style>

  /* Overall Section Styling */
  .single-article {
    max-width: 800px;
    margin: 0 auto;
    padding: 20px;
    background-color: #fafafa;
    box-sizing: border-box;
  }

  /* Article Card Design */
  .article-card {
    background: #fff;
    border-radius: 10px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    overflow: hidden;
    padding: 20px;
  }

  /* Article Title */
  .article-title {
    font-size: 2rem;
    font-weight: bold;
    color: #333;
    text-decoration: none;
    margin-bottom: 20px;
    display: block;
  }

  /* Article Image Styling */
  .article-image {
    width: 100%;
    height: auto;
    object-fit: cover;
    margin-bottom: 20px;
    border-radius: 8px;
  }

  /* Article Content */
  .article-content {
    font-size: 1.1rem;
    color: #555;
    line-height: 1.6;
    margin-bottom: 30px;
  }

  /* Meta Information Styling */
  .article-meta {
    font-size: 0.9rem;
    color: #777;
  }

  /* Author Name */
  .article-author {
    margin-bottom: 10px;
    font-weight: bold;
  }

  /* Tags Styling */
  .article-tags {
    margin-bottom: 15px;
  }

  .article-tag {
    text-decoration: none;
    color: #007BFF;
    font-weight: bold;
  }

  .article-tag:hover {
    text-decoration: underline;
  }

  /* Date Styling */
  .article-date {
    font-style: italic;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .single-article {
      padding: 15px;
    }
    .article-title {
      font-size: 1.8rem;
    }
    .article-content {
      font-size: 1rem;
    }
  }


</style>